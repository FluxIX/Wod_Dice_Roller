#:import Roulette kivy.garden.roulette.Roulette

<RollScreen>
   GridLayout:
      cols: 1

      AnchorLayout:
         anchor_x: "center"

         GridLayout:
            cols: 1

            Label:
               id: roll_result_display
               size_hint: ( 1, .75 )

               text_size: ( self.width, None )
               font_size: "35sp"
               halign: "center"
               valign: "middle"
               markup: True

            AnchorLayout:
               anchor_x: "center"

               ToggleButton:
                  id: display_sorted_roll
                  size_hint: ( .5, .25 )

                  state: "down"
                  on_state: root._update_displayed_roll()

                  text: "Sort Rolls"
                  font_size: "20sp"

      BoxLayout:
         orientation: "horizontal"
         size_hint_y: .35

         GridLayout:
            cols: 1

            Label:
               size_hint_y: .25

               font_size: "25sp"
               text: "Dice Pool"

            AnchorLayout:
               anchor_x: "center"
               anchor_y: "top"

               Roulette:
                  id: dice_pool_selector
                  min_index: -10
                  max_index: 40
                  density: 5.25

                  font_size: "20sp"

         GridLayout:
            cols: 1

            Label:
               size_hint_y: .25

               font_size: "25sp"
               text: "Target Number"

            AnchorLayout:
               anchor_x: "center"
               anchor_y: "top"

               Roulette:
                  id: target_number_selector
                  min_index: -15
                  max_index: 25
                  density: 3.25

                  font_size: "20sp"

      BoxLayout:
         orientation: "vertical"
         size_hint_y: .25

         size_hint_x: 1

         AnchorLayout:
            anchor_x: "center"

            ToggleButton:
               id: allow_explosion_control
               size_hint_x: .5

               state: "down"

               text: "Allow Explosions"
               font_size: "20sp"

         BoxLayout:
            orientation: "horizontal"

            Button:
               id: roll_dice_control

               font_size: "25sp"
               text: "Roll"

               on_press: root._roll_dice()

            Button:
               id: reset_ui_control

               font_size: "25sp"
               text: "Reset"

               on_press: root._reset()
